// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CLIENT
}

model User {
  id    String   @unique @default(uuid()) @db.Uuid
  name  String
  email String   @unique
  role  UserRole

  createdPayment Payment[]      @relation("created")
  debitPayment   Payment[]      @relation("debit")
  groups         UserInGroups[]
}

model Payment {
  id              String   @unique @default(uuid()) @db.Uuid
  amount          Decimal  @db.Money
  createdAt       DateTime @default(now()) @db.Timestamptz()
  location        String
  debitorAccepted Boolean  @default(false)

  createdBy   User   @relation("created", fields: [createdById], references: [id])
  createdById String @db.Uuid

  debtor       User   @relation("debit", fields: [debtorUserId], references: [id])
  debtorUserId String @db.Uuid

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String @db.Uuid
}

model Group {
  id   String @unique @default(uuid()) @db.Uuid
  name String

  payments Payment[]
  users    UserInGroups[]
}

model UserInGroups {
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.Uuid

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String @db.Uuid

  @@id([userId, groupId])
}
